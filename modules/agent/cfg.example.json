{
    "debug": true,
    "hostname": "{{ agent_uuid }}",
    "ip": "",
    "plugin": {
        "enabled": true,
        "dir": "./tiresias-plugin",
        "git": "https://gitlab.chinac.com/OpsUltra/tiresias-plugin.git",
        "logs": "./logs"
    },
    "heartbeat": {
        "enabled": true,
        "addr": {% for host in groups['hbs']%} "{{ hostvars[host]['ansible_ssh_host'] }}:6030",{% endfor %}
        "interval": 60,
        "timeout": 1000
    },
    "transfer": {
        "enabled": true,
        "addrs": [
            {% for host in groups['transfer']%}
            "{{ hostvars[host]['ansible_ssh_host'] }}:8443"{% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        "interval": 60,
        "timeout": 1000
    },
    "http": {
        "enabled": true,
        "listen": ":1988",
        "backdoor": true
    },
    "collector": {
        "ifacePrefix": [],
        "mountPoint": []
    },
    "default_tags": {
        "type": "{{ agent_type }}"
    },
    "ignore": {
    }
}
